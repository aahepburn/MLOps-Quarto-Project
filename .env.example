# Environment variables for local development
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://mlops:mlops_dev_password@localhost:5432/mlops_data

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MODEL_NAME=mlops-model

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Cloud Storage (for production)
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_DATA=your-project-id-mlops-data
GCS_BUCKET_MODELS=your-project-id-mlops-models

# MinIO (local S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Monitoring
ENABLE_DRIFT_DETECTION=true
DRIFT_CHECK_INTERVAL=86400  # 24 hours in seconds

# Logging
LOG_LEVEL=INFO
